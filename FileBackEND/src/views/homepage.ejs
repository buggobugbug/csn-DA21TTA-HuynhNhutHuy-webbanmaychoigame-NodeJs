                    <!-- dùng hàm foreach để load dữ liệu cho tường minh và gọn code -->

                    <% listusers.forEach(function(user) { %>
                        <tr>
                            <td>
                                <%= user.id %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.city%>
                            </td>
                            <td>
                                <a href="/update/<%= user.id %>">Edit</a>
                                
                                <form action="/delete-user/<%= user.id %>" method="post">
                                    <button>Delete</button>
                                </form>
                                
                            </td>
                        </tr>
                        <% }); %>
