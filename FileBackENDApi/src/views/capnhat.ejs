<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Node.js Basic</title>
</head>

<body>
    <div class="topnav">
        <a href="/">Sản phẩm</a>
        <a class="" href="">Mới</a>
        <a class="active">Cập nhật</a>
    </div>
    <div class="updateinfor-user-container">
        <form action="/update-user" enctype="multipart/form-data" method="POST">
            <div style="padding-left:16px">
                <div class="w3-container">
                    <h2>List user Table</h2>
            
                    <table class="w3-table-all w3-hoverable">
                        <thead>
                            <tr class="w3-light-grey">
                                <th>Mã Khách Hàng</th>
                                <th>Tên Khách Hàng</th>
                                <th>Số điện thoại</th>
                                <th>Mã sản phẩm</th>
                                <th>Địa chỉ</th>
                                <th>Mã hóa đơn</th>
                                <th>Số lượng</th>
                                <th>Thời gian đặt hàng</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i < SanPham.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= SanPham[i].makh %>
                                    </td>
                                    <td>
                                        <%= SanPham[i].ten %>
                                    </td>
                                    <td>
                                        <%= SanPham[i].sdt %>
                                    </td>
                                    <td>
                                        <%= SanPham[i].MaSanPham %>
                                    </td>
                                    <td>
                                        <%= SanPham[i].diachiship%>
                                    </td>
                                    <td>
                                        <%= SanPham[i].mahd %>
                                    </td>
                                    <td>
                                        <%= SanPham[i].soluong %>
                                    </td>
                                    <td>
                                        <%= SanPham[i].thoigiandat %>
                                    </td>

                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            
            </div>
        </form>
    </div>
</body>

</html>